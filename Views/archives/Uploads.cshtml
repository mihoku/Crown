<div class="tab-content">
    <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
        <div class="row">
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-header">
                        <i class="header-icon lnr-license icon-gradient bg-plum-plate"> </i>Upload File
                    </div>
                    <div class="card-body">
                        Informasi : @ViewBag.desc
                        @using (Html.BeginForm("Uploads", "archives",FormMethod.Post,new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label col-md-2" for="description">Deskripsi Dokumen</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2" for="description">Jenis Dokumen</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("archiveTypeID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.archiveTypeID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                URL Sumber Berita/Dokumen (Opsional)
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.url, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.url, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="file" name="file" id="file" />
                                @Html.ValidationMessageFor(x => x.file, "", new { @class = "text-danger" })<br />
                            </div>
                            <input data-val="true" data-val-number="The field timelineItemID must be a number." data-val-required="The timelineItemID field is required." id="timelineItemID" name="timelineItemID" type="hidden" value="@ViewBag.timelineID">
                            <input id="path" name="path" type="hidden" value="file">

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Tambah Dokumen" class="mb-2 mr-2 border-0 btn-transition btn btn-primary" />
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
